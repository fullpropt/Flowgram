generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                  @id @default(cuid())
  email                String                  @unique
  passwordHash         String
  name                 String?
  createdAt            DateTime                @default(now())
  updatedAt            DateTime                @updatedAt
  ideaCards            IdeaCard[]
  calendarPosts        CalendarPost[]
  trashedIdeaCards     TrashedIdeaCard[]
  studioLogoAsset      StudioLogoAsset?
  studioReferenceAssets StudioReferenceAsset[]
}

model IdeaCard {
  id        String   @id
  userId    String
  titulo    String
  descricao String?
  pilar     String?
  camadas   Json
  status    String
  tags      Json
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model CalendarPost {
  id         String   @id
  userId     String
  ideaCardId String?
  titulo     String
  dataInicio DateTime
  dataFim    DateTime?
  canal      String
  observacoes String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model TrashedIdeaCard {
  id          String   @id
  userId      String
  card        Json
  relatedPosts Json
  deletedAt   DateTime
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model StudioLogoAsset {
  id         String   @id @default(cuid())
  userId      String   @unique
  originalName String
  storedName  String
  mimeType    String
  size        Int
  content     Bytes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StudioReferenceAsset {
  id          String   @id
  userId      String
  originalName String
  storedName  String
  mimeType    String
  size        Int
  content     Bytes
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([uploadedAt])
}
